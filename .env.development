# Quick Development Environment Configuration
# Copy this to .env for local development

# Basic Django Configuration
SECRET_KEY=django-insecure-development-key-change-in-production-12345
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (SQLite for quick setup)
DATABASE_URL=sqlite:///db.sqlite3

# Alternative MySQL Configuration (uncomment if using MySQL)
# DATABASE_URL=mysql://root:your_password@localhost:3306/scholarship_portal_db

# Redis Configuration (optional for development)
REDIS_URL=redis://localhost:6379/1

# Email Configuration (Console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@localhost

# CORS Configuration for development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Development Features
ENABLE_PERFORMANCE_MONITORING=False
ENABLE_QUERY_LOGGING=True

# File Upload Limits
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Disable security features for development
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
