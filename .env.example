# Django Configuration
SECRET_KEY=your-super-secret-key-here-make-it-long-and-complex-at-least-50-characters
JWT_SIGNING_KEY=your-jwt-signing-key-different-from-secret-key-also-50-characters
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database Configuration - AWS RDS MySQL
DATABASE_URL=mysql://username:password@your-rds-endpoint.region.rds.amazonaws.com:3306/scholarship_portal

# Legacy Database Settings (for compatibility)
DB_NAME=scholarship_portal_db
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_HOST=localhost
DB_PORT=3306

# Redis Configuration
REDIS_URL=redis://your-redis-endpoint:6379/1

# Celery Configuration
CELERY_BROKER_URL=redis://your-redis-endpoint:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-endpoint:6379/0

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-custom-domain-or-cloudfront-url

# Email Configuration - AWS SES
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-ses-smtp-username
EMAIL_HOST_PASSWORD=your-ses-smtp-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn-here
APP_VERSION=1.0.0

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password

# Backup Configuration
DATABASE_BACKUP_ENABLED=True
MEDIA_BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Performance Configuration
ENABLE_PERFORMANCE_MONITORING=True
ENABLE_QUERY_LOGGING=False

# Flower (Celery monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=your-flower-password

# File Upload Limits
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
